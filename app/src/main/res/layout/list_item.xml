<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        tools:text="Hole 1"
        android:textSize="16sp"
        android:id="@+id/holeLabel" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="Par:"
        android:textSize="16sp"
        android:textAlignment="center"
        android:id="@+id/parLabel" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        tools:text="0"
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/parCount" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="18sp"
        android:id="@+id/removeParButton" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="18sp"
        android:id="@+id/addParButton" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="Strokes: "
        android:textSize="16sp"
        android:textAlignment="center"
        android:id="@+id/strokesLabel" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        tools:text="0"
        android:textSize="18sp"
        android:textAlignment="center"
        android:id="@+id/strokeCount" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="18sp"
        android:id="@+id/removeStrokeButton" />

    <Button
        android:layout_width="0dp"
        android:layout_weight="1.8"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="18sp"
        android:id="@+id/addStrokeButton" />
</LinearLayout>